{{#each filtered as |figurine|}}
  <div class="col">
    <div class="card">
      <img
        src="/assets/{{figurine.figurine.filename}}"
        class="card-img-top"
        alt="img"
      />
      <div class="card-body">
        <h5 class="card-title"> {{figurine.figurine.product_name}}</h5>
        <p class="card-text">${{figurine.figurine.price}}.00</p>
        <button class="btn btn-primary" onclick="deleteFave('')">Delete Favorite</button>
        <a href="{{figurine.figurine.store_link}}" class="btn btn-secondary">Go
          to Website</a>
      </div>
    </div>
  </div>
{{/each}}